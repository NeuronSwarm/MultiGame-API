extends layout

block content
  .container
    h1 Recover Password
    p.lead On-Demand Editor Scheduling App
    br
    form(role='form', action="/forgot",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="email", placeholder='Email')
      button.btn.btn-default(type='submit') Submit
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
